<h1><%= @task.title %></h1>

<%=Kramdown::Document.new(@task.details).to_html.html_safe %>
<p>Completed?
  <%= @task.completed ? '👍' : '👎' %>
</p>
<p><%= link_to 'Home', tasks_path %></p>
<p><%= link_to 'Edit', edit_task_path(@task) %></p>
<p><%= link_to 'Delete',
  task_path(@task),
  method: :delete,
  data: { confirm: 'You sure? ⚠️' } %>
</p>

